<h1>Edit Post</h1>


<% if @cu == @post.user_id %>
	<%= form_for @post do |f| %>
		<p>
			<%= f.label :title %><br />
			<%= f.text_field :title %>
		</p>
		<p>
			<%= f.label :content %><br />
			<%= f.text_area :content, :size => "70x20" %>
		</p>
		<p>
			<%= f.submit "Update this post" %>
		</p>
	<% end %>
<% else %>
	
	<p>You do not have permission to edit this post</p>

<% end %>